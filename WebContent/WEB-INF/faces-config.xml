<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<!-- Production Area -->
	<managed-bean>
		<managed-bean-name>query</managed-bean-name>
		<managed-bean-class>sg.com.pinder.bean.Query</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>calenderQuery</managed-bean-name>
		<managed-bean-class>sg.com.pinder.bean.CalenderQuery</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>eventForm</managed-bean-name>
		<managed-bean-class>sg.com.pinder.bean.EventForm</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>  
		<managed-bean-name>userForm</managed-bean-name>  
		<managed-bean-class>sg.com.pinder.bean.UserForm</managed-bean-class>  
		<managed-bean-scope>view</managed-bean-scope>  
	</managed-bean>
	<managed-bean>  
		<managed-bean-name>userSession</managed-bean-name>  
		<managed-bean-class>sg.com.pinder.bean.UserSession</managed-bean-class>  
		<managed-bean-scope>session</managed-bean-scope>  
	</managed-bean>
	<managed-bean>  
		<managed-bean-name>indexRedirect</managed-bean-name>  
		<managed-bean-class>sg.com.pinder.bean.IndexRedirect</managed-bean-class>  
		<managed-bean-scope>session</managed-bean-scope>  
	</managed-bean>
	<managed-bean>
		<managed-bean-name>mongoProvider</managed-bean-name>  
		<managed-bean-class>sg.com.pinder.web.MongoProvider</managed-bean-class>  
		<managed-bean-scope>application</managed-bean-scope>  
	</managed-bean>
	<managed-bean>  
		<managed-bean-name>uploadBean</managed-bean-name>  
		<managed-bean-class>sg.com.pinder.bean.UploadBean</managed-bean-class>  
		<managed-bean-scope>view</managed-bean-scope>  
	</managed-bean>
	<managed-bean>  
		<managed-bean-name>uploadFile</managed-bean-name>  
		<managed-bean-class>UploadFile</managed-bean-class>  
		<managed-bean-scope>view</managed-bean-scope>  
	</managed-bean>
	
	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>de</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<message-bundle>
  			messages
		</message-bundle>
		<resource-handler>sg.com.pinder.mediahandler.ResourceHandlerWrapperImpl</resource-handler>
	</application>

</faces-config>